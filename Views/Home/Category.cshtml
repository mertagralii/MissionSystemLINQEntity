@model Category
@{
    List<Category> categories = ViewBag.Categories;
}
<h1>Kategori Listesi</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>KategoriAdi</th>
            <th>KategoriSummary</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in categories)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.CategoryName</td>
                <td>@category.CategorySummary</td>
                <td>
                    <a href="/Home/UpdateCategory/@category.Id" class="btn btn-primary">Güncelle</a>
                    <a href="/Home/DeleteCategory/@category.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row mt-4">

    <div class="col-md-12">
        <h5>Kategory Ekle</h5>
        <form action="/Home/AddCategory" method="post" autocomplete="off">
            <input type="text" class="form-control mb-2" placeholder="CategoryName Giriniz" name="CategoryName" required>
            <span asp-validation-for="CategoryName"></span>
            <input type="text" class="form-control mb-2" placeholder="CategorySummary Giriniz" name="CategorySummary" required>
			<span asp-validation-for="CategorySummary"></span>
            <button class="btn btn-primary w-100">Kategory Ekle</button>
        </form>
    </div>
</div>